include mixins/message

doctype html
html(lang="ko")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(property="og:type", content="Wooktube")
        meta(property="og:title", content="Wooktube")
        meta(property="og:description", content="Welcome to Wooktube")
        meta(property="og:image", content="https://i.pinimg.com/originals/7e/f8/27/7ef827f3ff5704b3668afab58fa0e1ac.jpg")
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")
        link(rel="stylesheet", href="/static/css/styles.css")
        link(rel="shortcut icon", type="image/x-icon", href="http://img.vogue.co.kr/vogue/2018/12/style_5c130671c1949-1400x1400.jpg")
        link(rel="preconnect", href="https://fonts.gstatic.com")
        link(href="https://fonts.googleapis.com/css2?family=Nanum+Gothic:wght@400;700&display=swap", rel="stylesheet")
    body
        if messages.error
            +message("error", messages.error)
        if messages.info
            +message("info", messages.info)
        if messages.success
            +message("sucess", messages.success)
        include partials/header
        .logo__background.splashScreen
            .mainwook
                .iconColumn
                    span.hye Hye
                    i.fab.fa-youtube.fabwook
                span.on W
                span.tw o
                span.th o
                span.fo k
                span.fi t
                span.si u
                span.se b                    
                span.ei e
            .subtitle
                .sub__col
                .sub__col
                span.sub__on Happy Birthday!
                //- span.sub__tw      
        main
            block content
        include partials/footer
    script(src="/static/js/main.js")
    script(src='https://kit.fontawesome.com/422d010fca.js', crossorigin='anonymous')
    script(src='https://code.jquery.com/jquery-3.2.1.min.js')
    script(src='/static/js/confetti.js')

    canvas#canvas.splashScreen
    block scripts
